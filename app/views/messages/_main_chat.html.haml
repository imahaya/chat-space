.chat-main
  .chat-main__group-info
    .chat-main__group-info__list
      .chat-main__group-info__list__text
        = @group.name
      .chat-main__group-info__list__member
        Member:
        - @group.users.each do |user|
          = user.name
    .chat-main__group-info__edit 
      = link_to 'Edit', edit_group_path(@group)
  .chat-main__message-list
    = render @messages

  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'new_message__login-input-text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__send'
       